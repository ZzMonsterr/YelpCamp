<!-- this `boilerplate.ejs` is supported by ejs-mate, used for every `/views/campgrounds`
  to get a boilerplate layouts by `layout` -->

<!-- basic layout is generated by typing `!` in vscode
  fancier staff comes from https://getbootstrap.com/docs/5.0/getting-started/introduction/ -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YelpCamp</title>
    <!-- CSS (stylesheet) part -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
        rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
        crossorigin="anonymous">
    
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.3.0/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v2.3.0/mapbox-gl.css' rel='stylesheet'/>
    <link rel="stylesheet" href="/stylesheets/app.css">

</head>

<!-- vh: view height -->
<body class="d-flex flex-column vh-100">
    <!-- nav bar -->
    <%- include('../partials/navbar') %> 

    <!-- mt-5: margin top to be 5 -->
    <main class="container mt-5">
        <!-- display flash message of success at the very top, using Bootstrap's Alert, dismissing type -->
        <%- include('../partials/flash') %> 
        <!-- a placeholder for /views/xx.ejs body part -->
        <%- body %>
    </main>

    <%- include('../partials/footer') %> 
    <!-- JS part -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

    <!-- validate should happen after bootstrap, cause order does matter! -->
    <script src='/javascripts/validateForms.js'></script>

</body>

</html>